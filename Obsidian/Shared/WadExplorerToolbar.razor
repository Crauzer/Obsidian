@using Obsidian.Data;

<MudToolBar Dense DisableGutters>
    <MudMenu Dense Class="ml-4" Label="File" Color="Color.Inherit"
             AnchorOrigin="Origin.BottomLeft" Size="Size.Medium">
        <MudMenuItem Disabled="@(WadTree is null)"
                     Icon="@CustomIcons.Material.ArchiveEdit" IconColor="Color.Primary" IconSize="Size.Small"
                     OnClick="OnOpenWad">
            Open
            <MudText Style="@($"float: right; color: {Theme.PaletteDark.TextSecondary}")" Typo="Typo.caption">Ctrl O</MudText>
        </MudMenuItem>
        <MudDivider />
        <MudMenuItem Disabled="@(WadTree is null)"
                     Icon="@CustomIcons.Material.ContentSaveAll" IconColor="Color.Primary" IconSize="Size.Small"
                     OnClick="OnExtractAll">
            Extract All
        </MudMenuItem>
        <MudMenuItem Icon="@CustomIcons.Material.ContentSave" IconColor="Color.Primary" IconSize="Size.Small"
                     Disabled="@(WadTree?.CheckedFiles?.Count() is 0 or null)"
                     OnClick="OnExtractSelected">
            Extract Selected
        </MudMenuItem>
    </MudMenu>
    <MudMenu Dense Class="ml-4" Label="Hashtable" Color="Color.Inherit"
             AnchorOrigin="Origin.BottomLeft" Size="Size.Medium">
        <MudMenuItem Icon="@CustomIcons.Material.TableArrowUp" IconColor="Color.Primary" IconSize="Size.Small"
                     OnClick="OnLoadHashtable">
            Load hashtable
        </MudMenuItem>
    </MudMenu>
</MudToolBar>